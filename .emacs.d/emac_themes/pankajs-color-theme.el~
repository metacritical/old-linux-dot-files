(defun pankajs-custom-theme ()
  (interactive)
  (color-theme-install
   '(pankajs-custom-theme
      ((background-color . "#3b3b3b")
      (background-mode . light)
      (border-color . "#2e2e2e")
      (cursor-color . "#fce94f")
      (foreground-color . "#ff2495")
      (mouse-color . "black"))
     (fringe ((t (:background "#2e2e2e"))))
     (mode-line ((t (:foreground "#ffffff" :background "#37004d"))))
     (region ((t (:background "#262626"))))
     (font-lock-builtin-face ((t (:foreground "#6fa0ec"))))
     (font-lock-comment-face ((t (:foreground "#2effe0"))))
     (font-lock-function-name-face ((t (:foreground "#ffbc47"))))
     (font-lock-keyword-face ((t (:foreground "#d64dff"))))
     (font-lock-string-face ((t (:foreground "#fff71f"))))
     (font-lock-type-face ((t (:foreground"#ff9200"))))
     (font-lock-constant-face ((t (:foreground "#ffd661"))))
     (font-lock-variable-name-face ((t (:foreground "#00eb76"))))
     (minibuffer-prompt ((t (:foreground "#ff2992" :bold t))))
     (font-lock-warning-face ((t (:foreground "red" :bold t))))
     )))
(provide 'pankajs-custom-theme)