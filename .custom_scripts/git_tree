#!/usr/bin/ruby
# -*- coding: utf-8 -*-

git_status = %x['git' 'status']

if git_status =~ /working directory clean/
  #puts "☘"
  #puts "☻ "
  #puts "☯"
  puts "⚑"
elsif git_status =~ /Changes to be committed/
  puts "♻"
  #puts "♺"
elsif git_status =~ /Changes not staged for commit:/ 
  puts "☢" 
else
  puts "☀"
end

